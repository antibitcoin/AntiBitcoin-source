#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_bitcoin
#build/bitcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_bitcoin)

DEB_INSTALL_EXAMPLES_AntiBitcoind += debian/examples/*
DEB_INSTALL_MANPAGES_AntiBitcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix AntiBitcoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f AntiBitcoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake AntiBitcoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_AntiBitcoin
	src/test_AntiBitcoin

# Ensure wrapper is set executable
binary-post-install/AntiBitcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/AntiBitcoind
binary-post-install/AntiBitcoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/AntiBitcoin-qt
